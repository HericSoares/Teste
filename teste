<script>
    function habilitarBotao() {
        document.getElementById("btnLiberar").disabled = false;
    }

    function gerarCodigo() {
        let codigoSalvo = localStorage.getItem("codigoSecreto");
        if (!codigoSalvo) {
            codigoSalvo = Math.floor(Math.random() * 9000) + 1000;
            localStorage.setItem("codigoSecreto", codigoSalvo);
        }
        document.getElementById("codigoSecreto").innerText = codigoSalvo;
        document.getElementById("conteudo").style.display = "block";
        document.getElementById("btnLiberar").disabled = true;
    }

    window.onload = function() {
        let codigoSalvo = localStorage.getItem("codigoSecreto");
        if (codigoSalvo) {
            document.getElementById("codigoSecreto").innerText = codigoSalvo;
            document.getElementById("conteudo").style.display = "block";
            document.getElementById("btnLiberar").disabled = true;
        }

        const videoContainer = document.getElementById("video-container");
        const iframe = document.createElement("iframe");
        iframe.id = "bgvideo";
        iframe.src = "https://player.vimeo.com/video/591754322?autoplay=1&muted=1&loop=1&background=1";
        iframe.frameBorder = "0";
        iframe.allow = "autoplay; fullscreen; picture-in-picture";
        iframe.allowFullscreen = true;
        videoContainer.appendChild(iframe);
    }
</script>
